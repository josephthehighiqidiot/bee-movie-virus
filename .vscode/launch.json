{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch a.exe",
            "type": "cppdbg",
            "request": "launch",
            // *** This is the line you need to change ***
            "program": "${workspaceFolder}/a.exe", 
            // Or use a more dynamic path (common for C/C++ projects):
            // "program": "${fileDirname}/${fileBasenameNoExtension}.exe",

            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe", // Change this to your debugger's path
            "preLaunchTask": "C/C++: g++.exe build active file"
        }
    ]
}